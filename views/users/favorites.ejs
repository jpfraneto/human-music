<%- include("../partials/header") %>

<div class="row">
  <div class="col-1"></div>
  <div class="col-10 title text-center"><p><strong>Favoritos de @<%=foundUser.username%></strong></p></div>
  <div class="col-1"></div>
</div>

<div class="box">
  <div class="column left"></div>
  <div id="middleColumn" class="column middle text-center">

    <table class="table content">
      <thead>
        <tr>
          <th scope="col">Usuario</th>
          <th scope="col">Fecha de Recomendación</th>
          <th scope="col">Nombre</th>
          <th scope="col">Fecha de Reproducción</th>
        </tr>
      </thead>
      <tbody>
        <% foundUser.favoriteRecommendations.forEach(function(favoriteRecommendation){ %>
          <tr>
            <td><%= favoriteRecommendation.author.username %></td>
            <td><%= favoriteRecommendation.recommendationDate %></td>
            <td><a href="/recommendations/<%=favoriteRecommendation._id%>"><%= favoriteRecommendation.name %></a></td>
            <td><%= favoriteRecommendation.daySKU %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <div class="text-center">
      <a class="btn btn-success btn-sm" href="/users/<%=foundUser.username%>">Volver al Usuario</a>
    </div>

  </div>
  <div class="column right"></div>
</div>


<%- include("../partials/footer") %>