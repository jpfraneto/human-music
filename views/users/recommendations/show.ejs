<%- include ("../../partials/users/userHeader") %>

<div class="container text-center ">
    <div class="row">
        <div class="col-12">
          <div class="text-center videoSquare">
            <iframe id="ytplayer" type="text/html" width="395" height="222"
            src="<%= recommendation.url%> >"
            frameborder="0"></iframe>
          </div>
        </div>
      </div>
    
        <div class="row">
          <div class="col-2"></div>
          <div class="col-8 userInformation">
            <div class="recommendationInformationDiv">
              <p><strong>Name: </strong><%= recommendation.name %></p>
              <p><strong>Status: </strong><%= recommendation.status %></p>
              <p><strong>Date of Recommendation: </strong> <%= recommendation.recommendationDate %> </p>
              <p><strong>Why did you recommend it?: </strong><%= recommendation.description %></p>
              <div class="text-center">
                <form class="delete-form" id="delete-form" action="/recommendations/<%=recommendation._id%>?_method=DELETE" method="POST">
                  <a class="btn btn-success" role="button" href="/recommendations/<%=recommendation._id%>/edit"><i class="fas fa-edit"></i></a>
                  <a class="btn btn-success" role="button" href="/users/<%=username%>/recommendations">Back to your recommendations page</a>
                  <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fas fa-trash-alt"></i></button>
                </form>
              </div>
            </div>
          </div>
          <div class="col-2"></div>
        </div>
      
        
</div>



<%- include ("../../partials/users/userFooter") %>