<%- include ("../../../partials/users/userHeader") %>

<div class="container text-center">
    <h1>Edit mission</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-6 text-center">
            <h3><%= mission.name %></h3>
            <p><%= mission.description %></p>
        </div>
        <div class="col-6">
            
            <form action="/users/<%=username%>/dojo/missions/<%=mission._id%>?_method=PUT" method="POST"> 
                <div class="form-group">

                  <label for="missionName" class="clock">What is the name of this mission?</label>
                  <input class="form-control" id="missionName" type="text" name="name" value="<%=mission.name%>">

                  <label for="missionDescription">Which is the mission that came to your mind?</label>
                  <textarea class="form-control" id="missionDescription" name="description" rows="6"><%=mission.description%></textarea>

                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-success" role="button" href="/users/<%=username%>/dojo/missions">Go back</a>
                </div>

            </form>

        </div>
    </div>
</div>

<%- include ("../../../partials/users/userFooter") %>