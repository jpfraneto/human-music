<%- include ("../../../partials/users/userHeader") %>

<div class="container text-center">
    <h1>Edit dailie</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-6 text-center">
            <h3><%= dailie.name %></h3>
            <p><%= dailie.description %></p>
        </div>
        <div class="col-6">
            
            <form action="/users/<%=username%>/dojo/dailies/<%=dailie._id%>?_method=PUT" method="POST"> 
                <div class="form-group">

                  <label for="dailieDescription">Which is the dailie that came to your mind?</label>
                  <textarea class="form-control" id="dailieDescription" name="description" rows="6"><%=dailie.description%></textarea>

                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-success" role="button" href="/users/<%=username%>/dojo/dailies">Go back</a>
                </div>

            </form>

        </div>
    </div>
</div>

<%- include ("../../../partials/users/userFooter") %>