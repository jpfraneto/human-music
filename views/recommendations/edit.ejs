<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-12 text-center title">
            <h1>Edit Your Recommendation</h1>
            <div class="container text-center content">
                <p>If you are not sure about what you have shared, and you want to revisit it, this is the place</p>
            </div>
        </div>
    </div>
    <hr id="horizontalRule">
    <div class="row">
        <div class="col-7 videoWrapper">
            <% source = recommendation.url + "?autoplay=1" %>
            <% src1 = source.slice(32) %>
            <% sourceFinal = "https://www.youtube.com/embed/" + src1 %>

            <div class="text-center">
                <iframe src="<%= sourceFinal %> >"></iframe>
            </div>

            <p><strong>Name:</strong><%= recommendation.name %></p>
            <p><strong>Why did you recommend it?:</strong><%= recommendation.description %></p>
        </div>
        <div class="col-5">
            <div>
                <form action="/recommendations/<%= recommendation._id %>?_method=PUT" method="POST">
                    
                    <div class="form-group">
                        <p class="content">URL</p>
                        <input class="form-control" type="text" value="<%= recommendation.url %>" name="recommendation[url]">
                    </div>
    
                    <div class="form-group">
                        <p class="content">Description</p>
                        <textarea class="form-control" rows="7" cols="33" name="recommendation[description]"><%= recommendation.description %></textarea>
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-success">Submit</button>
                        <a href="/recommendations" class="btn btn-primary">Go Back</a>
                    </div>  
                </form>
            </div>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>