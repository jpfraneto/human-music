<%- include("./partials/header") %>

<div class="row">
  <div class="col-1"></div>
  <div class="col-10 title text-center">
      <p><strong>The starting timestamp of this day is: <%= thisDay.startingDayTimestamp %> </strong></p>
      <p><strong>The chiDuration of this day is: <%= thisDay.chiDurationForThisDay %> </strong></p>
  </div>
  <div class="col-1"></div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table content">
        <thead>
          <tr>
            <th scope="col">Author</th>
            <th scope="col">Date of Recommendation</th>
            <th scope="col">Name [With the URL inside]</th>
            <th scope="col">Starting Timestamp</th>
            <th scope="col">Duration</th>
          </tr>
        </thead>
        <tbody>
          <% thisDay.recommendationsOfThisDay.forEach(function(recommendation){ %>
            <tr>
              <td> <a href="/users/<%= recommendation.author.username %>"><%= recommendation.author.username %></a></td>
              <td><%= recommendation.recommendationDate %></td>
              <td><a href="/recommendations/<%=recommendation._id%>"><%= recommendation.name %></a></td>
              <td><%= recommendation.startingRecommendationTimestamp %></td>
              <td><%= recommendation.duration %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="text-center">
  <a class="btn btn-primary" role="button" href="/past">Back to the Past</a>
</div>


<%- include("./partials/footer") %>