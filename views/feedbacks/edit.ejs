<%- include("../partials/header") %>

<div class="container text-center">
    <div class="navigationBar">
        <p><span id="pastSpan"><a href="/past">PAST</a></span><span id="presentSpan"><a href="/">PRESENT</a></span><span id="futureSpan" class="activeTense"><a href="/future">FUTURE</a></span></p>
    </div>
    <div class="clock">
        <p><%= today %> | <span id="presentClock">88:88:88</span></p>
    </div>
</div>

<div class="box">
    <div class="column left"></div>
    <div id="middleColumn" class="column middle text-center">
      <p><strong>Edit Feedback</strong></p>     

      <div class="row">
        <div class="col-6 text-center content">
            <p><%= feedback.message %></p>
        </div>
        <div class="col-6">
            
            <form action="/future/feedback/<%=feedback._id%>?_method=PUT" method="POST"> 
                <div class="form-group content">

                  <label for="feedbackMessage">What do you think will make this platform better?</label>
                  <textarea class="form-control" id="feedbackMessage" name="message" rows="6"><%=feedback.message%></textarea>

                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-success" role="button" href="/future/feedback">Go back</a>
                </div>

            </form>

        </div>
    </div>

    </div>
    <div class="column right"></div>
</div>

<%- include("../partials/footer") %>
