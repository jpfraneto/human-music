<%- include ("../partials/header") %>

<div class="container text-center">
    <h1>Edit feedback</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-6 text-center content">
            <p><%= feedback.message %></p>
        </div>
        <div class="col-6">
            
            <form action="/future/feedback/<%=feedback._id%>?_method=PUT" method="POST"> 
                <div class="form-group content">

                  <label for="feedbackMessage">What do you think will make this platform better?</label>
                  <textarea class="form-control" id="feedbackMessage" name="message" rows="6"><%=feedback.message%></textarea>

                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-success" role="button" href="/future/feedback">Go back</a>
                </div>

            </form>

        </div>
    </div>
</div>

<%- include ("../partials/footer") %>